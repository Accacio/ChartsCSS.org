/**
 * Custom Styles
 *
 * ref: https://v1.vuepress.vuejs.org/config/#index-styl
 */

.theme-container .home
  padding-top 0

.home
  text-align center

.home .hero img
  max-width 450px !important
  margin 2rem auto !important

.home .features
  align-items center !important
  border-bottom 1px solid #eee
  margin-bottom 2.5rem

.home .circles
  display flex
  justify-content space-between
  flex-wrap wrap
  gap 40px 10px
  padding 3rem 0 2rem
  margin-top 2.5rem
  border-top 1px solid #eee

.home .circle a
  display inline-block
  background-image linear-gradient(135deg, #48c, #f57)
  border-radius 50%
  padding 20px
  max-width 80px

.home .circle img
.home .circle svg
  width 80px
  height 80px

.home .circle p
  margin 0
  font-size 13px

.home .footer
  padding 2rem !important

.nav-links .repo-link
.sidebar .nav-links .repo-link
  display none !important

.page-edit
  text-align center
  padding-top 3rem

table
  margin-right auto
  margin-left auto
  width fit-content

.theme-default-content code
  color #333

.theme-container.example-page h1
.theme-container.example-page h2
.theme-container.example-page h3
  text-align center
  border-bottom 0

.theme-container.example-page h2
  margin 1rem auto
  padding 0

.theme-container.example-page h3
  margin 2rem auto
  padding 0

.theme-container.example-page .examples
  display grid
  grid-template-columns 1fr 1fr
  column-gap 50px

@media (max-width: 959px)
  .theme-container.example-page .examples
    grid-template-columns 1fr
    row-gap 50px

.theme-container.builder-page h1
  text-align center
